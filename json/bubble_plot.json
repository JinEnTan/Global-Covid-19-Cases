{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/JinEnTan/Global-Covid-19-Cases/master/data/worldometer_coronavirus_summary_data.csv"
  },
  "params": [
    {
      "name": "Population_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 100000000,
        "step": 1000000,
        "name": "Minimum Population: "
      }
    },
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Australia/Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Australia/Oceania"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.active_cases > 0"},
    {"filter": "datum.total_deaths > 0"},
    {"filter": "datum.population > Population_Above"},
    {
      "filter": "Continent_selection == null || datum.continent == Continent_selection"
    },
    {
      "calculate": "datum.total_confirmed/datum.population * 10000",
      "as": "Total Confirmed Cases per 10,000 Population"
    }
  ],
  "encoding": {
    "x": {
      "field": "total_confirmed",
      "type": "quantitative",
      "title": "Total Confirmed Cases",
      "axis": {"tickCount": 7},
      "scale": {"type": "log", "domain": [1, 50000000]}
    },
    "y": {
      "field": "active_cases",
      "type": "quantitative",
      "title":"Total Active Cases",
      "axis": {"tickCount": 6},
      "scale": {"type": "log", "domain": [1, 50000000]}
    }
  },
  "layer": [
    {
      "selection": {
        "continent_highlight": {
          "type": "multi",
          "fields": ["Continent"],
          "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
            "range": [10, 50, 150, 200, 300, 400]
          },
          "legend": {"format": ".1s"}
        },
        "color": {
          "field": "continent",
          "type": "nominal",
          "scale": {
            "domain": [
              "North America",
              "South America",
              "Europe",
              "Africa",
              "Asia",
              "Australia/Oceania"
            ],
            "range": [
              "#e41a1c",
              "#984ea3",
              "#ff7f00",
              "#a6cee3",
              "#377eb8",
              "#a65628"
            ]
          }
        },
        "opacity": {
          "condition": {"selection": "continent_highlight", "value": 0.6},
          "value": 0.2
        },
        "tooltip": [
          {"field": "country", "type": "nominal"},
          {"field": "total_confirmed", "type": "quantitative", "format": ",","title":"Total Confirmed Cases"},
          {"field": "active_cases", "type": "quantitative", "format": ",","title":"Total Active Cases"},
          {"field": "total_deaths", "type": "quantitative", "format": ",","title":"Total Death Cases"},
          {"field": "total_recovered", "type": "quantitative", "format": ",","title":"Total Recovered Cases"},
          {
            "field": "Total Confirmed Cases per 10,000 Population",
            "type": "quantitative",
            "format": ".2f"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "country", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['country'] == 'China' ||  datum['country'] == 'Australia' || datum['country'] == 'New Zealand' ||  datum['country'] == 'India' ||  datum['country'] == 'United States of America'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "country", "type": "nominal"},
          {"field": "total_confirmed", "type": "quantitative", "format": ",","title":"Total Confirmed Cases"},
          {"field": "active_cases", "type": "quantitative", "format": ",","title":"Active Cases"},
          {"field": "total_deaths", "type": "quantitative", "format": ",","title":"Total Death Cases"},
          {"field": "total_recovered", "type": "quantitative", "format": ",","title":"Total Recovered Cases"},
          {
            "field": "Total Confirmed Cases per 10,000 Population",
            "type": "quantitative",
            "format": ".2f"
          }
        ]
      }
    }
  ]
}